alias ghost-run="docker run \
		--name ansel-ghost \
		-p 2368:2368 \
		-d \
		--restart always \
		-v ${GHOST_DATA_DIR}:/var/lib/ghost \
		ghost"

alias ghost-publish="cd ${GHOST_DATA_DIR} \
	&& buster generate --domain 'ghost.ansellin.club' --target-domain 'weasellin.github.io' \
	&& buster deploy"

alias jupyterlab-run="docker run \
		--name ansel-jupyterlab \
		-p 8888:8888 \
		-d \
		--restart always \
		--env NB_UID=0 \
		--env NB_GID=0 \
		--env NB_USER=root \
		-v ${JUPYTER_DATA_DIR}:/home/jovyan/work \
		jupyter/pyspark-notebook:multi-kernel \
		start.sh \
		jupyter lab \
		--NotebookApp.token='${JUPYTER_TOKEN}'"

alias nginx-run="docker run \
		--name ansel-nginx \
		-p 80:80 \
		-d \
		--restart always \
		-v ${NGINX_CONF_DIR}:/etc/nginx/conf.d \
		nginx"
